---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Report Found Item">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Report a Found Item</h1>

        <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6">
            <form id="found-item-form" class="space-y-6">
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-700"
                        >Full Name:</label
                    >
                    <input
                        type="text"
                        id="name"
                        required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-700"
                        >TU Email:</label
                    >
                    <input
                        type="email"
                        id="email"
                        required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="phone"
                        class="block text-sm font-medium text-gray-700"
                        >Phone Number (optional):</label
                    >
                    <input
                        type="tel"
                        id="phone"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="item"
                        class="block text-sm font-medium text-gray-700"
                        >Item Name:</label
                    >
                    <input
                        type="text"
                        id="item"
                        required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="category"
                        class="block text-sm font-medium text-gray-700"
                        >Category:</label
                    >
                    <select
                        id="category"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    >
                        <option>Electronics</option>
                        <option>Clothing</option>
                        <option>ID Cards</option>
                        <option>Keys</option>
                        <option>Accessories</option>
                        <option>Other</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700"
                        >Color(s):</label
                    >
                    <div class="mt-2 grid grid-cols-2 gap-2">
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Beige"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Beige</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #f5f5dc;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Black"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Black</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #000;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Blue"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Blue</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #0000ff;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Brown"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Brown</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #8b0000;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Gray"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Gray</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #808080;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Green"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Green</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #008000;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Multi"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Multi</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-image: linear-gradient(45deg, red, blue);"
                            ></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Orange"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Orange</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: orange;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Pink"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Pink</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: pink;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Purple"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Purple</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: purple;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Red"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Red</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: red;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Turquoise"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Turquoise</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: turquoise;"></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="White"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>White</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: #fff; border: 1px solid #000;"
                            ></span>
                        </label>
                        <label class="flex items-center space-x-2">
                            <input
                                type="checkbox"
                                value="Yellow"
                                class="rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                            />
                            <span>Yellow</span>
                            <span
                                class="w-4 h-4 rounded-full border border-gray-300"
                                style="background-color: yellow;"></span>
                        </label>
                    </div>
                </div>

                <div>
                    <label
                        for="brand"
                        class="block text-sm font-medium text-gray-700"
                        >Brand (optional):</label
                    >
                    <input
                        type="text"
                        id="brand"
                        name="brand"
                        placeholder="e.g. Nike, Apple"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="description"
                        class="block text-sm font-medium text-gray-700"
                        >Detailed Description:</label
                    >
                    <textarea
                        id="description"
                        rows="4"
                        required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    ></textarea>
                </div>

                <div>
                    <label
                        for="location"
                        class="block text-sm font-medium text-gray-700"
                        >Location Found:</label
                    >
                    <select
                        id="location"
                        required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    >
                        <option value="York">York</option>
                        <option value="Arts">Arts</option>
                        <option value="LA">LA</option>
                        <option value="Business">Business</option>
                        <option value="Science">Science</option>
                        <option value="Health">Health</option>
                    </select>
                </div>

                <div>
                    <label
                        for="date"
                        class="block text-sm font-medium text-gray-700"
                        >Date Found:</label
                    >
                    <input
                        type="date"
                        id="date"
                        required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="dropoff"
                        class="block text-sm font-medium text-gray-700"
                        >Where Item Has Been Dropped Off (if any):</label
                    >
                    <input
                        type="text"
                        id="dropoff"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div>
                    <label
                        for="contact-method"
                        class="block text-sm font-medium text-gray-700"
                        >Preferred Contact Method:</label
                    >
                    <select
                        id="contact-method"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    >
                        <option>Email</option>
                        <option>Phone</option>
                    </select>
                </div>

                <div class="flex items-center">
                    <input
                        type="checkbox"
                        id="can-contact"
                        class="h-4 w-4 rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                    />
                    <label
                        for="can-contact"
                        class="ml-2 block text-sm text-gray-700"
                    >
                        I am willing to be contacted for pickup details
                    </label>
                </div>

                <div>
                    <label
                        for="verification-tip"
                        class="block text-sm font-medium text-gray-700"
                        >Optional Verification Tip (e.g. sticker, engraving):</label
                    >
                    <input
                        type="text"
                        id="verification-tip"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500"
                    />
                </div>

                <div class="flex items-center">
                    <input
                        type="checkbox"
                        required
                        class="h-4 w-4 rounded border-gray-300 text-yellow-500 focus:ring-yellow-500"
                    />
                    <label class="ml-2 block text-sm text-gray-700">
                        I confirm this information is accurate.
                    </label>
                </div>

                <div>
                    <button
                        type="submit"
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-500 hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
                    >
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </main>
</Layout>
