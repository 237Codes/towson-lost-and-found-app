---
import LoginForm from "@/components/LoginForm";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Login - TU Lost and Found">
  <main class="relative min-h-screen w-full bg-white px-4 py-12 overflow-hidden">
    <!-- Abstract Towson shapes -->
    <div class="absolute -top-10 -left-10 w-72 h-72 bg-yellow-400 opacity-20 rotate-45 rounded-full mix-blend-multiply blur-3xl"></div>
    <div class="absolute -bottom-20 left-1/2 w-96 h-96 bg-black opacity-10 -translate-x-1/2 rounded-full blur-2xl"></div>
    <div class="absolute top-1/3 right-0 w-60 h-60 bg-yellow-600 opacity-20 rotate-12 rounded-full blur-2xl"></div>

    <!-- Login form -->
    <div class="relative z-10 flex items-center justify-center min-h-screen">
      <LoginForm client:load />
    </div>
  </main>
</Layout>
