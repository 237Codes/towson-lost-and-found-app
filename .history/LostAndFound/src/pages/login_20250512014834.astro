---
import LoginForm from "@/components/LoginForm";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Login - TU Lost and Found">
  <main class="relative min-h-screen w-full bg-white px-4 py-12 overflow-hidden font-sans">
    <!-- Towson-inspired geometric lines -->
    <div class="absolute -top-24 left-[-5%] w-96 h-96 border-2 border-yellow-500 rotate-[25deg] rounded-sm opacity-80 z-0"></div>
    <div class="absolute top-1/2 right-[-5%] w-80 h-80 border-2 border-yellow-500 rotate-[45deg] rounded-sm opacity-80 z-0"></div>
    <div class="absolute bottom-0 left-1/3 w-96 h-96 border-2 border-yellow-600 rotate-[12deg] opacity-50 z-0"></div>

    <!-- Centered Login Form -->
    <div class="relative z-10 flex items-center justify-center min-h-screen">
      <LoginForm client:load />
    </div>
  </main>
</Layout>
